<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <EditText
            android:layout_width="109dp"
            android:layout_height="46dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/mealRate"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/mealRateText"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.187"/>
    <TextView
            android:text="@string/meal_rate_text"
            android:layout_width="110dp"
            android:layout_height="34dp"
            android:id="@+id/mealRateText" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp" android:layout_marginTop="28dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <EditText
            android:layout_width="109dp"
            android:layout_height="46dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/totalCost"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/totalCostText" android:layout_marginStart="8dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/mealRate"
            app:layout_constraintHorizontal_bias="0.187"/>
    <TextView
            android:text="@string/total_cost_text"
            android:layout_width="110dp"
            android:layout_height="34dp"
            android:id="@+id/totalCostText" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/mealRateText"/>
    <EditText
            android:layout_width="109dp"
            android:layout_height="46dp"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/fineRange"
            app:layout_constraintStart_toEndOf="@+id/fineRangeText"
            android:layout_marginStart="16dp" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/totalCost"/>
    <TextView
            android:text="@string/fine_range_text"
            android:layout_width="110dp"
            android:layout_height="34dp"
            android:id="@+id/fineRangeText" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/totalCostText"/>
    <EditText
            android:layout_width="109dp"
            android:layout_height="46dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/fineRate"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/fineRateText" android:layout_marginStart="8dp"
            android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/fineRange"
            app:layout_constraintHorizontal_bias="0.104"/>
    <TextView
            android:text="@string/fine_rate_text"
            android:layout_width="110dp"
            android:gravity="left"
            android:layout_height="34dp"
            android:id="@+id/fineRateText" android:textSize="20sp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/fineRangeText"/>
    <CheckBox
            android:text="@string/guest_meal_text"
            android:layout_width="243dp"
            android:layout_height="47dp"
            android:id="@+id/guestMealCheckBox"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/fineRateText"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="#2196F3" android:textSize="16sp" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.186"/>
    <Button
            android:text="Go"
            android:layout_width="107dp"
            android:layout_height="51dp"
            android:id="@+id/gobtn" android:textColor="#673AB7"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/guestMealCheckBox"
            android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.354"
            app:layout_constraintVertical_bias="0.092" android:background="#00BCD4" android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>